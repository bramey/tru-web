extends ../layout
append css
  link(rel='stylesheet', type='text/css', href='//bowercdn.net/c/github-markdown-css-2.0.10/github-markdown.css')
block content
  .container
    h1 Update News Entry
    +alerts()
    form.form-horizontal(action='/news/save', method='post', role='form')
      input(type='hidden', name='id', value=news.id)
      .form-group
        label.control-label.col-sm-2 Title
        .col-sm-10
          input.form-control(type='text', name='title', placeholder='Title', value=news.title)
      .form-group
        label.control-label.col-sm-2 Markdown
        .col-sm-10
          textarea.form-control(rows='15', name='content')=news.content
      .form-group
        label.control-label.col-sm-2 Photo URL
        .col-sm-10
          input.form-control(type='text', name='photoUrl', placeholder='News Photo', value=news.photoUrl)
      .form-group
        label.control-label.col-sm-2 Active
        .col-sm-10
          input(type='checkbox', name='active', checked=news.active)
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save
