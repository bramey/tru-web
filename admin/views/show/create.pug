extends ../layout
block content
  .container
    h1 Create Show
    +alerts()
    form.form-horizontal(action='/show/save', method='post', role='form')
      .form-group
        label.control-label.col-sm-2 Venue / Event
        .col-sm-10
          input.form-control(type='venue', name='venue', placeholder='Venue/Event')
      .form-group
        label.control-label.col-sm-2 Date
        .col-sm-10
          input.form-control(type='text', name='date', placeholder='Date')
          span.help-block Date format: mm-dd-yyyy
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save